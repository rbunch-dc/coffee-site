extends layout

block content

	#choices.container
		#plan-wrapper
			#choices-header Tell us what you want!!
			#choices-sub-header Shipping is free and you can skip any week.
			form(name="choices-form", action="/contact", method="post")
				#choices-quantity.choices-block
					.row
						.choices-image.col-sm-6
							img(src='/images/food-scale.png')
						.col-sm-6
							h2.choices-label 2. Quantity
							.choices-lower-text-wrapper
								.choices-lower-text How many pounds (in increments of .25 lb) would you like each delivery?
									input(type="text", name="emailAddress")
									input(type="text", name="name")
									input(type="text", name="messageBody")
									input(type="text", name="subject")
								.choices-help-text You can cancel anytime You can skip anytime.

				#choices-grind.choices-block
					.row
						.choices-image.col-sm-6
							img(src='/images/beans.png')
						.col-sm-6
							h2.choices-label 3. Grind Type
							.choices-lower-text-wrapper
								.choices-lower-text How do you like your grinds?
								select(id="grind", name="grind", class="form-control")
									option(value="extraCourse") Extra Course
									option(value="course") Course
									option(value="mediumCourse") Medium Course
									option(value="fine") Fine
									option(value="veryFine") Very Fine
								.choices-help-text You can cancel anytime You can skip anytime.
				input.btn.btn-primary.btn-lg(type="submit", name="submit")

